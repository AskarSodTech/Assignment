<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/primaryColor</item>
        <item name="android:textColorPrimary">@color/accentColor</item>
        <item name="android:textColorSecondary">@color/accentColor</item>
    </style>

    <style name="LeftTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#FFFFFF</item>

        <!-- Add any other desired TextView attributes here -->
    </style>

</resources>
